@model ProjPermManage.Models.EditUserViewModel

@{ ViewData["Title"] = "Edit User"; }

<h1 class="h4">Edit User</h1>

<form method="post" class="mt-3">

    <div class="form-group row">
        <label asp-for="UserName" class=" col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Id" class=" col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Email" class=" col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-sm-6 ml-1">
            <button class="btn btn-sm btn-info">Update User</button>
            <a asp-action="Index" class="btn btn-sm btn-dark">Cancel</a>
        </div>
    </div>
    <div class="card">
        <div class="card-header"><h3 class="text-left">User Role</h3></div>
        <div class="card-body">
            @if (Model.Roles.Any())
            {
                foreach (var role in Model.Roles)
                {
<h5 class="card-title">@role</h5> }
}
else
{
<h5 class="card-title">None for the moment</h5>}
        </div>
        <div class="card-footer">
            <a asp-controller="UserRoles" asp-action="Index" asp-route-userId="@Model.Id" style="width:auto" class="btn btn-info float-left">
                Manage Role
            </a>
        </div>
    </div>
    <div class="card mt-3 mb-3">
        <div class="card-header"><h3 class="text-left">User Claims</h3></div>
        <div class="card-body">
            @if (Model.Roles.Any())
            {
@foreach (var claims in Model.Claims)
{
<h5 class="card-title text-left">@claims</h5>} }
else
{
<h5 class="card-title">None for the moment</h5>}
        </div>
        <div class="card-footer">
            <a href="#" style="width:auto" class="btn btn-info float-left">
                Manage Claims
            </a>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
