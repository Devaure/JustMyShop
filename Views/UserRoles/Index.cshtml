@model ProjPermManage.Models.ManagerUserRolesViewModel

@{ ViewData["Title"] = "Manage Roles"; }

<h3>Manage role for @Model.UserId</h3>

<br />
<div class="card">
    <div class="card-body table-responsive" id="viewAll">
        <form method="post" asp-controller="UserRoles" asp-action="Update" asp-route-id="@Model.UserId" class="d-inline">

            <input asp-for="@Model.UserId" type="hidden" />

            <table class="table table table-striped" id="userRolesTable">
                <thead>
                    <tr>
                        <th>Role</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.UserRoles.Count(); i++)
                    {
                        <tr>
                            <td>
                                <input asp-for="@Model.UserRoles[i].RoleName" type="hidden" />
                                @Model.UserRoles[i].RoleName
                            </td>
                            <td>
                                <div class="form-check m-1">
                                    <input asp-for="@Model.UserRoles[i].Selected" class="form-check-input" />
                                </div>
                            </td>
                        </tr>
                    }
                    <div asp-validation-summary="All" class="text-danger"></div>
                </tbody>
            </table>
            <div class="col-sm-12" style="padding:20px 20px 0px 0px">
                <button type="submit" id="save" class="btn bg-primary text-white">
                    <i class="fa fa-check"></i>
                    Save
                </button>
                <button asp-action="Index" asp-controller="User" id="save" class="btn btn-dark text-white">
                    <i class="fa fa-times-circle"></i>
                    Cancel
                </button>
            </div>
        </form>
    </div>
</div>












@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
